{
  "name": "csv",
  "displayName": "CSV",
  "publisher": "ReprEng",
  "description": "Seamlessly Display and Edit CSVs",
  "icon": "images/icon.jpg",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonaraphael/csv.git"
  },
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.93.0",
    "node": ">=14"
  },
  "categories": [
    "Data Science",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:csv",
    "onCommand:csv.toggleExtension",
    "onCommand:csv.toggleHeader",
    "onCommand:csv.toggleSerialIndex",
    "onCommand:csv.changeSeparator"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "csv",
        "extensions": [
          ".csv"
        ],
        "aliases": [
          "CSV",
          "csv"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "csv.toggleExtension",
        "title": "CSV: Toggle Extension On/Off"
      },
      {
        "command": "csv.toggleHeader",
        "title": "CSV: Toggle First Row as Header"
      },
      {
        "command": "csv.toggleSerialIndex",
        "title": "CSV: Toggle Serial Index Column"
      },
      {
        "command": "csv.changeSeparator",
        "title": "CSV: Change CSV Separator"
      },
      {
        "command": "csv.changeFontFamily",
        "title": "CSV: Change Font Family"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "CSV Extension Configuration",
      "properties": {
        "csv.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/Disable the CSV custom editor."
        },
        "csv.treatFirstRowAsHeader": {
          "type": "boolean",
          "default": true,
          "description": "Treat the first row of CSV as a header."
        },
        "csv.addSerialIndex": {
          "type": "boolean",
          "default": false,
          "description": "Add a serial index column at the left of the table."
        },
        "csv.separator": {
          "type": "string",
          "default": ",",
          "description": "CSV separator to use."
        },
        "csv.fontFamily": {
          "type": "string",
          "default": "Menlo",
          "description": "CSV Font Family to use."
        },
        "csv.cellPadding": {
          "type": "number",
          "default": 4,
          "description": "Vertical padding in pixels for table cells."
        }
      }
    },
    "customEditors": [
      {
        "viewType": "csv.editor",
        "displayName": "CSV",
        "selector": [
          {
            "filenamePattern": "*.csv"
          }
        ]
      }
    ],
    "csv.fontFamily": {
      "type": "string",
      "default": "",
      "description": "Font family used by the CSV custom editor. Leave empty to inherit ‘editor.fontFamily’.",
      "scope": "application"
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint '**/*.ts'",
    "package": "vsce package"
  },
  "dependencies": {
    "font-list": "^1.5.1",
    "papaparse": "^5.4.1"
  },
  "devDependencies": {
    "@types/node": "^14.0.0",
    "@types/papaparse": "^5.3.16",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^8.57.0",
    "typescript": "^4.4.3"
  }
}
