{
  "name": "csv",
  "displayName": "CSV",
  "publisher": "ReprEng",
  "description": "Seamlessly Display and Edit CSVs",
  "icon": "images/icon.jpg",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonaraphael/csv.git"
  },
  "version": "1.0.6",
  "engines": {
    "vscode": "^1.93.0",
    "node": ">=14"
  },
  "categories": [
    "Data Science",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:csv",
    "onCommand:csv.toggleExtension",
    "onCommand:csv.toggleHeader",
    "onCommand:csv.toggleSerialIndex",
    "onCommand:csv.changeSeparator"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "csv",
        "extensions": [".csv"],
        "aliases": ["CSV", "csv"],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      { "command": "csv.toggleExtension", "title": "CSV: Toggle Extension On/Off" },
      { "command": "csv.toggleHeader", "title": "CSV: Toggle Treating First Row as Header" },
      { "command": "csv.toggleSerialIndex", "title": "CSV: Toggle Adding Serial Index Column" },
      { "command": "csv.changeSeparator", "title": "CSV: Change CSV Separator" }
    ],
    "configuration": {
      "type": "object",
      "title": "CSV Extension Configuration",
      "properties": {
        "csv.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/Disable the CSV custom editor."
        },
        "csv.treatFirstRowAsHeader": {
          "type": "boolean",
          "default": true,
          "description": "Treat the first row of CSV as a header."
        },
        "csv.addSerialIndex": {
          "type": "boolean",
          "default": false,
          "description": "Add a serial index column at the left of the table."
        },
        "csv.separator": {
          "type": "string",
          "default": ",",
          "description": "CSV separator to use."
        },
         "csv.fontFamily": {
          "type": "string",
          "default": "Menlo",
          "description": "CSV Font Family to use."
        }
      }
    },
    "customEditors": [
      {
        "viewType": "csv.editor",
        "displayName": "CSV",
        "selector": [
          {
            "filenamePattern": "*.csv"
          }
        ]
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint '**/*.ts'",
    "test": "npm run compile && mocha --ui tdd --timeout 20000 out/test/**/*.js",
    "package": "vsce package"
  },
  "dependencies": {
    "papaparse": "^5.4.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "^14.0.0",
    "@types/vscode": "^1.60.0",
    "vscode": "^1.1.37",
    "@vscode/test-cli": "^0.0.11",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^8.57.0",
    "mocha": "^10.2.0",
    "@types/papaparse": "^5.3.6",
    "typescript": "^4.4.3"
  }
}
